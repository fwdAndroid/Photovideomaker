<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:layout_gravity="center"
    n1:gravity="center"
    n1:orientation="vertical">

    <LinearLayout
        n1:id="@+id/skjgh"
        n1:layout_width="fill_parent"
        n1:layout_height="?actionBarSize"
        n1:layout_gravity="center"
        n1:background="@drawable/maingadient"
        n1:gravity="center"
        n1:orientation="horizontal"
        n1:weightSum="1.0">

        <ImageView xmlns:n2="http://schemas.android.com/apk/res-auto"
            n1:id="@+id/ivBack"
            n1:layout_width="?actionBarSize"
            n1:layout_height="?actionBarSize"
            n1:layout_gravity="center"
            n1:padding="10.0dip"
            n2:srcCompat="@drawable/ic_left" />

        <TextView
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:layout_gravity="center"
            n1:layout_weight="1.0"
            n1:fontFamily="sans-serif-smallcaps"
            n1:gravity="center|left"
            n1:paddingLeft="10.0dip"
            n1:text="My Album"
            n1:textColor="@android:color/white"
            n1:textSize="18.0dip" />
    </LinearLayout>

    <LinearLayout
        n1:layout_below="@+id/skjgh"
        n1:layout_above="@+id/fl_adplaceholder"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_gravity="center"
        n1:layout_margin="5.0dip"
        n1:gravity="center"
        n1:orientation="vertical"
        n1:weightSum="1.0">

        <androidx.recyclerview.widget.RecyclerView
            n1:id="@+id/rv_my_album"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:layout_gravity="center"
            n1:layout_weight="1.0" />
    </LinearLayout>
    <FrameLayout
        n1:layout_alignParentBottom="true"
        n1:id="@+id/fl_adplaceholder"
        n1:layout_width="match_parent"
        n1:layout_height="305dp"
        />

</RelativeLayout>