<?xml version="1.0" encoding="utf-8"?>
<selector n1:color="@android:color/white" n1:enterFadeDuration="300" n1:exitFadeDuration="300"
  xmlns:n1="http://schemas.android.com/apk/res/android">
    <item n1:state_checked="true">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/amber_500" />
        </shape>
    </item>
    <item n1:state_pressed="true">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/amber_500" />
        </shape>
    </item>
    <item n1:state_selected="true">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/amber_500" />
        </shape>
    </item>
    <item>
        <shape n1:shape="rectangle">
            <solid n1:color="@color/amber_200" />
        </shape>
    </item>
</selector>